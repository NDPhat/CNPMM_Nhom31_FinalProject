<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech"
    tools:context=".screen.LoginActivity">

    <Button
        android:id="@+id/buttonVerifyLogin"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="144dp"
        android:text="Verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvaLogin" />

    <Button
        android:id="@+id/buttonSelectLogin"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="68dp"
        android:text="Select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvaLogin" />

    <Button
        android:id="@+id/buttonCaptureLogin"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        android:text="Capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvaLogin" />

    <ImageView
        android:id="@+id/imageViewAvaLogin"
        android:layout_width="301dp"
        android:layout_height="325dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/ava"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>